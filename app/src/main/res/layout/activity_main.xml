<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quizzer"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black"
        android:id="@+id/label"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/geo"
        android:id="@+id/geoButton"
        android:layout_below="@+id/label"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:textAlignment="center"
        android:layout_below="@id/geoButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/border"/>


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/his"
        android:id="@+id/hisButton"
        android:layout_below="@+id/label"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/geoButton"
        android:layout_marginStart="40dp"

        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="History"
        android:textAlignment="center"
        android:layout_below="@id/hisButton"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/geoButton"
        android:layout_marginStart="40dp"
        android:background="@drawable/border"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sci"
        android:id="@+id/sciButton"
        android:layout_below="@+id/geoButton"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textAlignment="center"
        android:layout_below="@id/sciButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/border"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/art"
        android:id="@+id/artButton"
        android:layout_below="@+id/hisButton"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/sciButton"
        android:layout_marginStart="40dp"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Art"
        android:textAlignment="center"
        android:layout_below="@id/artButton"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/sciButton"
        android:layout_marginStart="40dp"
        android:background="@drawable/border"/>

</RelativeLayout>